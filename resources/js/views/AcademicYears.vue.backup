                            'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium',
                            year.status === 'planning' ? 'bg-gradient-to-r from-yellow-100 to-yellow-200 text-yellow-800 border border-yellow-300' :
                            year.status === 'completed' ? 'bg-gradient-to-r from-purple-100 to-purple-200 text-purple-800 border border-purple-300' :
                            'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 border border-gray-300'
                          ]"
                        >
                          <span class="w-2 h-2 mr-1.5 rounded-full inline-block"
                                :class="[
                                  year.status === 'planning' ? 'bg-yellow-500' :
                                  year.status === 'completed' ? 'bg-purple-500' :
                                  'bg-gray-500'
                                ]">
                          </span>
                          {{ year.status === 'planning' ? 'Perencanaan' :
                             year.status === 'completed' ? 'Selesai' :
                             year.status || 'Unknown' }}
                        </span>
                      </div>
                    </td>

                    <!-- Actions -->
                    <td class="px-6 py-4">
                      <div class="flex justify-end space-x-1">
                        <!-- Set Active Button -->
                        <button
                          v-if="!year.is_active && year.status === 'planning'"
                          @click="setActiveAcademicYear(year.id)"
                          :disabled="settingActive"
                          class="p-2 text-green-600 hover:bg-green-100 rounded-lg transition-colors duration-200 group"
                          title="Aktifkan tahun akademik"
                        >
                          <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                        </button>

                        <!-- Edit Button -->
                        <button
                          @click="editAcademicYear(year)"
                          class="p-2 text-blue-600 hover:bg-blue-100 rounded-lg transition-colors duration-200 group"
                          title="Edit tahun akademik"
                        >
                          <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                          </svg>
                        </button>

                        <!-- Duplicate Button -->
                        <button
                          @click="duplicateAcademicYear(year.id)"
                          class="p-2 text-purple-600 hover:bg-purple-100 rounded-lg transition-colors duration-200 group"
                          title="Duplikat tahun akademik"
                        >
                          <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                          </svg>
                        </button>

                        <!-- Delete Button -->
                        <button
                          @click="deleteAcademicYear(year.id)"
                          class="p-2 text-red-600 hover:bg-red-100 rounded-lg transition-colors duration-200 group"
                          title="Hapus tahun akademik"
                        >
                          <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                          </svg>
                        </button>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Modals -->
      <!-- Add/Edit Modal -->
      <div v-if="formModal.show" class="fixed inset-0 z-50 overflow-y-auto">
        <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
          <div class="fixed inset-0 transition-opacity" @click="closeFormModal">
            <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
          </div>

          <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full">
            <form @submit.prevent="saveAcademicYear">
              <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="mb-4">
                  <h3 class="text-lg leading-6 font-medium text-gray-900 mb-2">
                    {{ formModal.isEdit ? 'Edit Tahun Akademik' : 'Tambah Tahun Akademik Baru' }}
                  </h3>
                  <p class="text-sm text-gray-500">
                    {{ formModal.isEdit ? 'Perbarui informasi tahun akademik yang ada' : 'Masukkan informasi untuk tahun akademik baru' }}
                  </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <!-- Basic Info -->
                  <div class="space-y-4">
                    <h4 class="text-sm font-medium text-gray-900 border-b pb-2">Informasi Dasar</h4>

                    <div>
                      <label class="block text-sm font-medium text-gray-700">Nama Tahun Akademik *</label>
                      <input
                        v-model="formModal.data.name"
                        type="text"
                        required
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        placeholder="Contoh: 2023/2024 Ganjil"
                      />
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700">Kode *</label>
                      <input
                        v-model="formModal.data.code"
                        type="text"
                        required
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        placeholder="Contoh: 20231"
                      />
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700">Deskripsi</label>
                      <textarea
                        v-model="formModal.data.description"
                        rows="3"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        placeholder="Deskripsi tahun akademik"
                      ></textarea>
                    </div>
                  </div>

                  <!-- Period Info -->
                  <div class="space-y-4">
                    <h4 class="text-sm font-medium text-gray-900 border-b pb-2">Periode</h4>

                    <div>
                      <label class="block text-sm font-medium text-gray-700">Tanggal Mulai *</label>
                      <input
                        v-model="formModal.data.start_date"
                        type="date"
                        required
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                      />
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700">Tanggal Selesai *</label>
                      <input
                        v-model="formModal.data.end_date"
                        type="date"
                        required
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                      />
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700">Jumlah Semester</label>
                      <input
                        v-model.number="formModal.data.semesters"
                        type="number"
                        min="1"
                        max="3"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                      />
                    </div>
                  </div>
                </div>
              </div>

              <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button
                  type="submit"
                  :disabled="formModal.saving"
                  class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm disabled:opacity-50"
                >
                  <svg v-if="formModal.saving" class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  {{ formModal.saving ? 'Menyimpan...' : (formModal.isEdit ? 'Update' : 'Simpan') }}
                </button>
                <button
                  type="button"
                  @click="closeFormModal"
                  class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm"
                >
                  Batal
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </Layout>
</template>

<script setup>
import { ref, computed, onMounted } from 'vue'
import { useToastStore } from '../stores/toast'
import Layout from '@/components/Layout.vue'
import Toast from '@/components/Toast.vue'
import academicYearService from '../services/academicYearService'

// Auth state
const isAuthenticated = computed(() => {
  const token = localStorage.getItem('token');
  return token !== null && token !== undefined && token !== '';
});

// State
const academicYears = ref([])
const activeYear = ref(null)
const loading = ref(false)
const searchQuery = ref('')
const statusFilter = ref('')
const settingActive = ref(false)

// Form Modal
const formModal = ref({
  show: false,
  isEdit: false,
  saving: false,
  data: {
    name: '',
    code: '',
    description: '',
    start_date: '',
    end_date: '',
    semesters: 2
  }
})

// Toast
const toastStore = useToastStore()

// Computed
const filteredYears = computed(() => {
  let filtered = academicYears.value

  if (searchQuery.value) {
    const query = searchQuery.value.toLowerCase()
    filtered = filtered.filter(year =>
      year.name.toLowerCase().includes(query) ||
      year.code.toLowerCase().includes(query) ||
      (year.description && year.description.toLowerCase().includes(query))
    )
  }

  if (statusFilter.value) {
    filtered = filtered.filter(year => year.status === statusFilter.value)
  }

  return filtered
})

// Methods
const formatDate = (dateString) => {
  if (!dateString) return '-'
  return new Date(dateString).toLocaleDateString('id-ID', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  })
}

const fetchData = async () => {
  try {
    loading.value = true
    const response = await academicYearService.getAll()
    if (response.success) {
      academicYears.value = response.data
      activeYear.value = academicYears.value.find(year => year.is_active)
    }
  } catch (error) {
    console.error('Error fetching academic years:', error)
    toastStore.addToast({
      type: 'error',
      title: 'Error',
      message: 'Gagal memuat data tahun akademik'
    })
  } finally {
    loading.value = false
  }
}

const refreshData = () => {
  fetchData()
}

const openCreateModal = () => {
  formModal.value = {
    show: true,
    isEdit: false,
    saving: false,
    data: {
      name: '',
      code: '',
      description: '',
      start_date: '',
      end_date: '',
      semesters: 2
    }
  }
}

const closeFormModal = () => {
  formModal.value.show = false
}

const editAcademicYear = (year) => {
  formModal.value = {
    show: true,
    isEdit: true,
    saving: false,
    data: { ...year }
  }
}

const saveAcademicYear = async () => {
  try {
    formModal.value.saving = true

    let response
    if (formModal.value.isEdit) {
      response = await academicYearService.update(formModal.value.data.id, formModal.value.data)
    } else {
      response = await academicYearService.create(formModal.value.data)
    }

    if (response.success) {
      toastStore.addToast({
        type: 'success',
        title: 'Berhasil',
        message: `Tahun akademik berhasil ${formModal.value.isEdit ? 'diperbarui' : 'ditambahkan'}`
      })
      closeFormModal()
      fetchData()
    }
  } catch (error) {
    console.error('Error saving academic year:', error)
    toastStore.addToast({
      type: 'error',
      title: 'Error',
      message: error.response?.data?.message || 'Gagal menyimpan data'
    })
  } finally {
    formModal.value.saving = false
  }
}

const setActiveAcademicYear = async (id) => {
  try {
    settingActive.value = true
    const response = await academicYearService.setActive(id)

    if (response.success) {
      toastStore.addToast({
        type: 'success',
        title: 'Berhasil',
        message: 'Tahun akademik berhasil diaktifkan'
      })
      fetchData()
    }
  } catch (error) {
    console.error('Error setting active year:', error)
    toastStore.addToast({
      type: 'error',
      title: 'Error',
      message: error.response?.data?.message || 'Gagal mengaktifkan tahun akademik'
    })
  } finally {
    settingActive.value = false
  }
}

const duplicateAcademicYear = async (id) => {
  try {
    const response = await academicYearService.duplicate(id)

    if (response.success) {
      toastStore.addToast({
        type: 'success',
        title: 'Berhasil',
        message: 'Tahun akademik berhasil diduplikasi'
      })
      fetchData()
    }
  } catch (error) {
    console.error('Error duplicating academic year:', error)
    toastStore.addToast({
      type: 'error',
      title: 'Error',
      message: error.response?.data?.message || 'Gagal menduplikasi tahun akademik'
    })
  }
}

const deleteAcademicYear = async (id) => {
  if (!confirm('Apakah Anda yakin ingin menghapus tahun akademik ini?')) {
    return
  }

  try {
    const response = await academicYearService.delete(id)

    if (response.success) {
      toastStore.addToast({
        type: 'success',
        title: 'Berhasil',
        message: 'Tahun akademik berhasil dihapus'
      })
      fetchData()
    }
  } catch (error) {
    console.error('Error deleting academic year:', error)
    toastStore.addToast({
      type: 'error',
      title: 'Error',
      message: error.response?.data?.message || 'Gagal menghapus tahun akademik'
    })
  }
}

// Lifecycle
onMounted(() => {
  fetchData()
})
</script>

